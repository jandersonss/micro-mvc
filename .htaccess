RewriteEngine On

#Acesso controler com paginação
RewriteRule ^([^/|,]*)\/([^/|,]*),,([^/|,]*)\.html$ /index.php?controller=$1&num_pag=$3

#Acesso ao controller
RewriteRule ^([^/|,]*)\.html$ /index.php?controller=$1


#Acesso controller/id,titulo
RewriteRule ^([^/|,]*)/([^/|,]*),([^/|,]*)\.html$ /index.php?controller=$1&id=$2&TITULO=$3

#Acesso controller/metodo/id,titulo
RewriteRule ^([^/|,]*)/([^/|,]*)/([^/|,]*),([^/|,]*)\.html$ /index.php?controller=$1&action=$2&id=$3&TITULO=$4

#Acesso ao controller/metodo
RewriteRule ^([^/|,]*)/([^/|,]*)\.html$ /index.php?controller=$1&action=$2

#RewriteRule ^([a-zA-Z]*)/?([a-zA-Z]*)?/?([a-zA-Z0-9]*)?/?$ index.php?controller=$1&action=$2&id=$3 [NC,L]
